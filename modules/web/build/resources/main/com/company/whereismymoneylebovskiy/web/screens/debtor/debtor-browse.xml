<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="debtorsTable"
        messagesPack="com.company.whereismymoneylebovskiy.web.screens.debtor">
    <data readOnly="true">
        <collection id="debtorsDc"
                    class="com.company.whereismymoneylebovskiy.entity.Debtor"
                    view="_local">
            <loader id="debtorsDl">
                <query>
                    <![CDATA[select e from whereismymoneylebovskiy_Debtors e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="debtorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="debtorsTable"
                dataLoader="debtorsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="debtorsTable"
                    width="100%"
                    dataContainer="debtorsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="email"/>
                <column id="amountOfDebt"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="debtorsTable.create"/>
                <button id="editBtn" action="debtorsTable.edit"/>
                <button id="removeBtn" action="debtorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
